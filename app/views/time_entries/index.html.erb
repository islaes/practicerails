<div class="row">
 <!--Shortcuts-->
  <div class="col-md-2">
    <h3>My Shortcuts</h3>
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <a class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapse1">Foraker Labs</a>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
          <div class="panel-body">
            <h5>Overhead</h5>
            <p><a>Morning Emails </a>(x)</p>
            <p><a>Something else </a>(x)</p>
            <h5>Training and Learning</h5>
            <p><a>Ruby Practice </a>(x)</p>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <a class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapse2">Reliable Excavation and Demolition</a>
        </div>
        <div id="collapse2" class="panel-collapse collapse">
          <div class="panel-body">
            <h5>Training</h5>
            <p><a>Technical Support </a>(x)</p>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <a class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapse3">Builders League United</a>
        </div>
        <div id="collapse3" class="panel-collapse collapse">
          <div class="panel-body">
            <h5>Development</h5>
            <p><a>Development of new features </a>(x)</p>
            <p><a>Bugs </a>(x)</p>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <!--End of Shortcuts-->

  <!--Spacer-->
    <div class="col-md-1"></div>
  <!--End of spacer-->

  <div class="col-md-6">
    <!--Day buttons-->
    <div class="btn-group" role="group" aria-label="Dates">
      <button type="button" class="btn btn-default"><i class="fa fa-caret-left"></i></button>
      <button type="button" class="btn btn-default">Sun</button>
      <button type="button" class="btn btn-default">Mon</button>
      <button type="button" class="btn btn-default">Tue</button>
      <button type="button" class="btn btn-default">Wed</button>
      <button type="button" class="btn btn-default">Thu</button>
      <button type="button" class="btn btn-default">Fri</button>
      <button type="button" class="btn btn-default">Sat</button>
      <button type="button" class="btn btn-default"><i class="fa fa-caret-right"></i></button>
    </div>  
    <!-- End of day buttons -->
    <br><br>
    <!--Time entry form -->
    <form role="form">
    <div class="row">
        <div class="col-md-6 col-sm-6">
         <div class="form-group">
          <label for="Clients">Client </label>
            <select name="Clients" class="fancyboxes">
              <% @clients.each do |client| %>
                <option value="<%= client %>"><%= client.cli_name %></option>
              <% end %>
            </select>
        </div>  
           </div>
           <div class="col-md-6 col-sm-6">
              <div class="form-group">
              <label for="Projects">Project </label>
              <select name="Projects" class="fancyboxes">
                <% @projects.each do |project| %>
                  <option value="<%= project %>"><%= project.pro_name %></option>
                <% end %>
              </select>
             </div>  
         </div>
    </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input name="theDate" size="12">
        <input type="button" value="Today" onclick="var theDate = new Date(); this.form.theDate.value = theDate.toLocaleDateString();">
      </div>   
      <div class="form-group">
        <label for="decription">Description</label><br>
        <textarea name="Description" rows="4" cols="75">
        </textarea>
      </div> 
      <div class="form-group">
        <label for="ptnumber">PT Number </label>
        <input id="field" type="text" name="ptnumber" value="" size="22" />
      </div>
      <div class="row">
        <div class="col-md-6 col-sm-6">
               <div class="form-group">
                <label for="start">Start Time </label>
                <input id="field" type="text" name="starttime" value="" size="15" />
                <input type="button" value="Now" onclick="var starttime = new Date(); this.form.starttime.value = starttime.toLocaleTimeString();">
              </div>    
              <div class="form-group">
                <label for="date">End Time </label>
                <input id="field" type="text" name="endtime" value="" size="16" />
                <input type="button" value="Now" onclick="var endtime = new Date(); this.form.endtime.value = endtime.toLocaleTimeString();">
              </div> 
           </div>
           <div class="col-md-6 col-sm-6">
              <b>AM format "hhmma"<br>PM format hhmmp<br>(e.g. 0916a, 0456p, 813a)</b>
           </div>
        </div>
    <!--Collapsable section-->
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div id="headingTwo">
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFields" aria-expanded="false" aria-controls="collapseFields">
           &nbsp;<b>+ Additional Fields</b>
          </a>
        </div>
        <div id="collapseFields" class="panel-collapse collapse" role="tabpanel" aria-labelledby="collapseFields">
          <div class="panel-body">
              <form role="form">
                <div class="form-group">
                  <label for="internal_decription">Internal Description</label><br>
                    <textarea name="Internal_Description" rows="4" cols="50">
                    </textarea>
                </div>
                <div class="form-group">
                  <input type="checkbox"> Mark for Review
                  <br>
                  <input type="checkbox"> Add to My Shortcuts
                </div>
              </form>
          </div>
        </div>
      </div>
    </div>
    <!--End of collapsible section-->
      <input type="submit" value="Save & Close Previous" />
      <input type="button" value="Save" />
      <a href="#">Cancel</a>
    </form>
    <!--End of time entry form-->
    <hr>
    <!--Open time entry-->
    <h4>Open Time Entries</h4>
    <ul style="list-style-type: none;">
      <% @open_time_entries.each do |open_time_entry| %>
        <li class="time-entry">
          <div class="row">
            <div class="col-md-5 col-sm-5">
              <b><%= open_time_entry.client_name %></b><br>
              <%= open_time_entry.project_name %>
              <%= open_time_entry.name %>
            </div>
            <div class="col-md-3 col-sm-3">
              <%= open_time_entry.description %>
              <br>
              <a href="#">Add to shortcuts</a>
            </div>
            <div class="col-md-4 col-sm-4">
              <%= open_time_entry.starts %> 
              <br>
              <%= open_time_entry.date %><br>
              <b><%= open_time_entry.totaltime %></b>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <hr>
    <!--Completed time entries-->
    <h4>Saved Time Entries</h4>
    <ul style="list-style-type: none;">
      <% @time_entries.each do |time_entry| %>
        <li class="time-entry">
          <div class="row">
            <div class="col-md-5 col-sm-5">
              <b><%= time_entry.client_name %></b><br>
              <%= time_entry.project_name %>
              <%= time_entry.name %>
              <br>&nbsp;
            </div>
            <div class="col-md-3 col-sm-3">
              <%= time_entry.description %>
              <br>
              <a href="#">Add to shortcuts</a>
            </div>
            <div class="col-md-4 col-sm-4">
              <%= time_entry.starts %> - <%= time_entry.ends %>
              <br>
              <%= time_entry.date %><br>
              <b><%= time_entry.totaltime %></b>
              <br>&nbsp;
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <!--Spacer-->
  <div class="col-md-1"></div>
  <!--End of spacer-->

  <!--Begin Sidebar-->
 <div class="col-md-2">
  <div id="TotalTime">
    <input type="button" value="Today">
